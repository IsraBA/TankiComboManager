{
  "manifest_version": 3,
  "name": "Tanki Online Pro Combo Manager",
  "version": "2.0",
  "description": "Advanced modular combo manager with automated tab navigation.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.tankionline.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.tankionline.com/*"
      ],
      "css": [
        "styles.css",
        "combo_card.css",
        "ui/lobby_button.css",
        "ui/delete_combo_modal.css"
      ],
      "js": [
        "lib/constants.js",
        "lib/utils.js",
        "lib/language_manager.js",
        "core/combo_cleaner.js",
        "core/tab_navigator.js",
        "core/scanners/base_item_scanner.js",
        "core/scanners/augment_scanner.js",
        "core/scanners/protection_scanner.js",
        "core/scanners/paint_scanner.js",
        "core/combo_saver.js",
        "core/equippers/base_item_equipper.js",
        "core/equippers/augment_equipper.js",
        "core/equippers/protection_equipper.js",
        "core/combo_loader.js",
        "core/navigation_helpers.js",
        "core/auto_navigator.js",
        "ui/menu_injector.js",
        "ui/lobby_button_injector.js",
        "ui/lobby_shortcut_handler.js",
        "ui/combo_drag_handler.js",
        "ui/delete_combo_modal.js",
        "ui/combo_card_renderer.js",
        "ui/view_renderer.js",
        "main.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}