{
  "manifest_version": 3,
  "name": "Tanki Online Pro Combo Manager",
  "version": "2.0",
  "description": "Advanced modular combo manager with automated tab navigation.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.tankionline.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.tankionline.com/*"
      ],
      "css": [
        "styles.css"
      ],
      "js": [
        "lib/constants.js",
        "lib/utils.js",
        "core/storage_manager.js",
        "core/tab_navigator.js",
        "core/scanners/base_item_scanner.js",
        "core/scanners/augment_scanner.js",
        "core/scanners/protection_scanner.js",
        "core/scanners/paint_scanner.js",
        "core/combo_saver.js",
        "core/combo_loader.js",
        "ui/menu_injector.js",
        "ui/view_renderer.js",
        "main.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}